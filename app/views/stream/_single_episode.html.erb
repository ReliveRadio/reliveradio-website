<div class="row episode">
	<div class="small-3 columns">

		<!-- EPISODE PODCAST IMAGE -->
		<% if !podcast.nil? %>
			<div class="ribbon-wrapper">
				<img  class="episode-image" src="<%= APP_CONFIG['artwork_base_url'] + podcast.slugintern %>.jpg">
				<% if episode["first_live"] %>
					<div class="hide-for-small">
						<div class="ribbon-wrapper-red">
						<span data-tooltip class="has-tip tip-top" title="Das ist eine Erstausstrahlung. Höre diese Episode schon vor Veröffentlichung hier beim ReliveRadio!">
							<div class="ribbon-red"><i class="fa fa-star"></i></div>
						</span>
						</div>
					</div>
				<% end %>
			</div>
		<% end %>

		<!-- EPISODE PLAYTIME INFO FOR SMALL DEVICES-->
		<div class="show-for-small playtime-small">
			<!-- start time -->
			<div class="time-info"><i class="fa fa-play"></i> <%= episode['starts_locale'].strftime("%H:%M") %></div>
			<!-- end time -->
			<div class="time-info"><i class="fa fa-stop"></i> <%= episode['ends_locale'].strftime("%H:%M") %></div>
			<!-- duration -->
			<div class="time-info"><i class="fa fa-clock-o"></i> <%= episode['duration'] %> Min.</div>
		</div>

		<!-- EPISODE PLAYTIME INFO FOR LARGE DEVICES-->
		<div class="hide-for-small playtime-large">
			<!-- start time -->
			<div class="time-info"><strong><i class="fa fa-play"></i> Beginn:</strong> <%= episode['starts_locale'].strftime("%H:%M") %></div>
			<!-- end time -->
			<div class="time-info"><strong><i class="fa fa-stop"></i> Ende:</strong> <%= episode['ends_locale'].strftime("%H:%M") %></div>
			<!-- duration -->
			<div class="time-info"><strong><i class="fa fa-clock-o"></i> Dauer:</strong> <%= episode['duration'] %> Min.</div>
		</div>
	</div>

	<div class="small-9 columns">
		<!-- NAME OR TRACK DESCRIPTION -->
		<h2><%= !podcast.nil? ? podcast.name : episode['artist_name'] %></h2>

		<!-- TRACK TITLE -->
		<h5><%= episode['track_title'] %></h5>

		<% if !podcast.nil? %>
			<!-- PODCAST DESCRIPTION -->
			<p class="hide-for-small"><%= podcast.description %></p>

			<!-- SOCIAL LINKS - MORE METAINFO FOR PODCAST -->
		    <ul class="inline-list hide-for-small">
		      <!-- WEBSITE -->
		      <% if !podcast.url.blank? %><li><a href="<%= podcast.url %>" target="_blank"><i class="fa fa-globe"></i> Webseite</a></li><% end %>
		      <!-- FEED -->
		      <% if !podcast.feedurl.blank? %>
			  <li>
				<a href="#" data-dropdown="subscription-dropdown"><i class="fa fa-rss"></i> Abonnieren</a>
				<ul id="subscription-dropdown" class="f-dropdown" data-dropdown-content>
		      		<li><a href="http://b.instaca.st/button/subscribe?url=<%= podcast.feedurl %>" target="_blank">Instacast</a></li>
					<li><a href="<%= podcast.feedurl %>">FeedURL</a></li>
				</ul>
		      </li>
				<% end %>
		      <!-- TWITTER -->
		      <% if !podcast.twitterhandle.blank? %><li><a href="http://www.twitter.com/<%= podcast.twitterhandle %>" target="_blank"><i class="fa fa-twitter"></i> Twitter</a></li><% end %>
		      <!-- ADN -->
		      <% if !podcast.adnhandle.blank? %><li>
        		<a href="https://alpha.app.net/<%= podcast.adnhandle %>" target="_blank"><i class="fa fa-adn"></i> ADN</a>
      		</li><% end %>
		      <!-- FLATTR -->
		      <% if !podcast.flattrhandle.blank? %><li>
		        <a href="https://flattr.com/submit/auto?user_id=<%= podcast.flattrhandle %>&url=http://reliveradio.de/<%= podcast.slugintern %>&title=<%= podcast.name %> im ReliveRadio&language=de&category=audio" target="_blank"><i class="fa fa-heart"></i> Flattr</a>
		      </li><% end %>
		      <!-- HOERSUPPE -->
		      <% if !podcast.hoersuppeslug.blank? %><li><a href="http://hoersuppe.de/podcast/<%= podcast.hoersuppeslug %>" target="_blank"><i class="fa fa-headphones"></i> Hörsuppe</a></li><% end %>
		    </ul>
		    <!-- MORE INFO LINK FOR MOBILE VIEW -->
			<p class="show-for-small"><a target="_blank" href="<%= info_url(:slugintern => podcast.slugintern) %>"><i class="fa fa-info-sign"></i> Mehr Informationen</a></p>
		<% end %>
	</div>
</div>
<hr />