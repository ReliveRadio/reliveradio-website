<%= stylesheet_link_tag "culture_stream" %>
<% title "Kultur Stream" %>

<div class="row">
	<div class="large-3 columns">
		<div class="logo-container">
			<%= image_tag "logo.png", :class => "logo" %>
		</div>
		<ul id="stream-selector">
			<li><%= link_to "Technik", :technique_stream, :class => "technique" %></li>
			<li><%= link_to "Kultur", :culture_stream, :class => "culture active" %></li>
		</ul>
		<div class="hide-for-small">
			<span class="livestreambutton off">Livestream starten</span>
	  </div>

	  <div id="listeners-container" class="hide-for-small">
	  	<hr />
			<h1 id="listeners"><%= @listeners %></h1>
			<p class="listeners-infotext">Livehörer</p>
		</div>
		
		<div class="hide-for-small">		
			<hr />
			<%= render "widgets/livestream_widget" %>

			<hr />
			<%= render "widgets/help_widget" %>
		</div>

	</div>
	<div class="large-9 columns">
		<h1 class="hide-for-small">KULTUR Stream</h1>
		<h3 class="subheader hide-for-small">Kultur, Gesellschaft, Musik</h3>
		<p class="hide-for-small">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet, at, ipsum obcaecati optio similique mollitia neque pariatur architecto eaque voluptate. Impedit, vel amet eligendi magnam illo eius fugiat rem doloremque.</p>
		<div id="live-episode" class="dropshadow">
			<%= render 'live_episode', :episode => @live_episode, :podcast => @live_episode["db"] %>
		</div>
		<div class="upcoming"><i class="icon-arrow-down"></i> Nächste Podcasts <i class="icon-arrow-down"></i></div>
		<div id="episodes">
			<%= render 'episodes', :episodes => @episodes %>
		</div>
	</div>
</div>

<audio id="player" preload="none" src="http://stream.reliveradio.de:8000/24.mp3"></audio>

<!-- LISTENERS COUNT SETUP -->
<%= javascript_tag do %>
	<% if !@listeners.blank? %>
		window.listeners = <%= @listeners %>;
	<% else %>
		window.listeners = -1;
	<% end %>
<% end %>

<%= javascript_include_tag 'stream' %>
<%= javascript_include_tag 'stream_culture' %>