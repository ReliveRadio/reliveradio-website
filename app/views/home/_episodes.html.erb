<% if !@episodes.blank? %>
	<!-- SHOW ALL UPCOMING PODCASTS -->
	<% @episodes.each do |episode| %>
		<% podcast = episode["db"] %>
			<% if episode["isLive"] %>
				<%= render 'single_episode_live', :podcast => podcast, :episode => episode %>
			<% else %>
				<%= render 'single_episode', :podcast => podcast, :episode => episode %>
			<% end %>
		<% end %>
	<% end %>

	<!-- PROGRESSBAR SETUP -->
	<%= javascript_tag do %>
		window.starts = new Date(<%= @episodes.first['starts'].to_i %> * 1000);
		window.ends = new Date(<%= @episodes.first['ends'].to_i %> * 1000);
<% end %>