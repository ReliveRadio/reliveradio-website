<h1>Sendeplan</h1>

<% @episodes.each do |episode| %>
	
	<!-- find corresponding podcast in database -->
	<% podcast = episode["db"] %>

	<h2><%= episode['artist_name'] %></h2>
	<img src="http://reliveradio.de/podcasts/logos/<%= podcast.slugintern %>.jpg">
	<p><%= episode['track_title'] %></p>
	<p><%= podcast.description %></p>
	<p><%= episode['starts'] %></p>
	<p><%= episode['ends'] %></p>
<% end %>
