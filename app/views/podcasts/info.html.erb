<% title @podcast.name %>
<%= stylesheet_link_tag "podcasts" %>

<div class="row">
  <div class="medium-3 columns">
    <h2><img src="<%= APP_CONFIG['artwork_base_url'] + @podcast.slugintern %>.jpg"></h2>
  </div>
  <div class="medium-9 columns">
    <h1 class="breaklines"><%= @podcast.name %></h1>
      <!-- PODCAST DESCRIPTION -->
      <p><%= @podcast.description %></p>

      <!-- SOCIAL LINKS - MORE METAINFO FOR PODCAST -->
        <ul class="inline-list">
          <!-- WEBSITE -->
          <% if !@podcast.url.blank? %><li><a href="<%= @podcast.url %>" target="_blank"><i class="icon-globe"></i> Webseite</a></li><% end %>
          <!-- FEED -->
          <% if !@podcast.feedurl.blank? %>
        <li>
        <a href="#" data-dropdown="subscription-dropdown"><i class="icon-rss"></i> Abonnieren</a>
        <ul id="subscription-dropdown" class="f-dropdown" data-dropdown-content>
              <li><a href="http://b.instaca.st/button/subscribe?url=<%= @podcast.feedurl %>" target="_blank">Instacast</a></li>
          <li><a href="<%= @podcast.feedurl %>">FeedURL</a></li>
        </ul>
          </li>
        <% end %>
          <!-- TWITTER -->
          <% if !@podcast.twitterhandle.blank? %><li><a href="http://www.twitter.com/<%= @podcast.twitterhandle %>" target="_blank"><i class="icon-twitter"></i> Twitter</a></li><% end %>
          <!-- ADN -->
          <% if !@podcast.adnhandle.blank? %><li>
            <a href="https://alpha.app.net/<%= @podcast.adnhandle %>" target="_blank"><i class="icon-adn"></i> ADN</a>
          </li><% end %>
          <!-- FLATTR -->
          <% if !@podcast.flattrhandle.blank? %><li>
            <a href="https://flattr.com/submit/auto?user_id=<%= @podcast.flattrhandle %>&url=http://reliveradio.de/<%= @podcast.slugintern %>&title=<%= @podcast.name %> im ReliveRadio&language=de&category=audio" target="_blank"><i class="icon-heart"></i> Flattr</a>
          </li><% end %>
          <!-- HOERSUPPE -->
          <% if !@podcast.hoersuppeslug.blank? %><li><a href="http://hoersuppe.de/podcast/<%= @podcast.hoersuppeslug %>" target="_blank"><i class="icon-headphones"></i> HÃ¶rsuppe</a></li><% end %>
        </ul>
  </div>
</div>
