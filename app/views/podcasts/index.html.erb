<div class="row">
    <div class="twelve columns">

        <h1>Alle Podcasts in der Datenbank</h1>

        <%= link_to 'New Podcast', new_podcast_path %> | 
        <%= link_to "Download as CSV", podcasts_path(format: "csv") %>

        <h2>Import Podcasts</h2>
        <%= form_tag import_podcasts_path, multipart: true do %>
          <%= file_field_tag :file %>
          <%= submit_tag "Import" %>
        <% end %>

    </div>
</div>

<% @podcasts.each do |podcast| %>
    <div class="row">

      <div class="large-4 columns">

        <h2><img src="http://reliveradio.de/podcasts/logos/<%= podcast.slugintern %>.jpg"></h2>
        
        <ul class="button-group">
            <li><%= link_to 'Show', podcast, :class => "button secondary" %></li>
            <li><%= link_to 'Edit', edit_podcast_path(podcast), :class => "button secondary" %></li>
            <li><%= link_to 'Delete', podcast, method: :delete, data: { confirm: 'Are you sure?' }, :class => "button alert" %></li>
        </ul>
      
      </div>
      <div class="large-8 columns">
        <h2 class="subheader breaklines"><%= podcast.name %></h2>
        <div class="breaklines"><strong>url: </strong><%= podcast.url %></div>
        <div class="breaklines"><strong>slugintern: </strong><%= podcast.slugintern %></div>
        <div class="breaklines"><strong>flattrhandle: </strong><%= podcast.flattrhandle %></div>
        <div class="breaklines"><strong>twitterhandle: </strong><%= podcast.twitterhandle %></div>
        <div class="breaklines"><strong>hoersuppeslug: </strong><%= podcast.hoersuppeslug %></div>
        <div class="breaklines"><strong>feedurl: </strong><%= podcast.feedurl %></div>
        <div class="breaklines"><strong>artistname: </strong><%= podcast.artistname %></div>
        <div class="breaklines"><strong>description: </strong><%= podcast.description %></div>
      </div>
    </div>
<% end %>


