<% title "Podcast Verzeichnis" %>
<%= stylesheet_link_tag "podcasts" %>

<div class="row">
    <div class="large-12 columns">
        <h1>Podcast Verzeichnis</h1>
        <h4 class="subheader hide-for-small">Hier findet ihr nun eine Liste all der Podcasts, die bereits zugesagt haben, dass sie auch beim ReliveRadio gespielt werden d√ºrfen. Wir bedanken uns bei allen Podcasts, die bereit sind bei diesem Projekt mitzumachen.</h4>
        <hr />
    </div>
</div>

<div id="searchbar" class="row">
    <div class="large-6 small-centered columns">
        <%= form_tag overview_path, :method => 'get' do %>
            <div class="row collapse">
                <div class="small-10 columns">
                    <%= text_field_tag :search, params[:search], :placeholder => "Verzeichnis durchsuchen", :id => "search-input-field" %>
                </div>
                <div class="small-2 columns hide-for-small">
                    <%= submit_tag "Suchen", :name => nil, :class => "prefix button" %>
                </div>
                <div class="small-2 columns show-for-small">
                    <a href="<%= overview_path %>" class="prefix button secondary">Clear</a>
                </div>
            </div>
            <div>Es wurden <%= @result_count %> Podcasts gefunden.</div>
        <% end %>
    </div>
</div>

<% toggle = 0 %>
<% @podcasts.each do |podcast| %>
    <% if toggle%3 == 0 %>
        <div class="row podcast">
    <% end %>

      <div class="small-4 columns">

        <a href="<%= info_url(:slugintern => podcast.slugintern) %>"><img src="<%= Artwork::ARTWORK_BASE_URL + podcast.slugintern %>.jpg"></a>
        <h3 class="hide-for-small breaklines"><%= podcast.name %></h3>
        <p class="hide-for-small"><%= first_x_words(podcast.description, 20) %></p>
        <p class="hide-for-small"><a href="<%= info_url(:slugintern => podcast.slugintern) %>"><i class="icon-info-sign"></i> Mehr Informationen</a></p>
      
      </div>
    <% if toggle%3 == 2 %>
        </div>
    <% end %>
    <% toggle = toggle + 1 %>
<% end %>

<div class="row">
    <div class="small-12 columns">
        <div class="pagination-centered">
            <%= will_paginate @podcasts %>        
        </div>
    </div>
</div>

<%= javascript_include_tag 'select_overview_searchbar' %>


