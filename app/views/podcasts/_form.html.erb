<%= form_for(@podcast) do |f| %>

  <div class="row">
    <div class="large-12 columns">
      <!-- Error handling -->
      <% if @podcast.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@podcast.errors.count, "error") %> prohibited this podcast from being saved:</h2>

          <ul>
          <% @podcast.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

<div class="row">
  <div class="large-3 columns">
    <% if !@podcast.slugintern.blank? %>
      <img src="<%= APP_CONFIG['artwork_base_url'] + @podcast.slugintern %>.jpg">
    <% end %>
  </div>
  <div class="large-9 columns">

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label "Webseite" %><br />
      <%= f.text_field :url %>
    </div>
    <div class="field">
      <%= f.label "SlugIntern" %><br />
      <%= f.text_field :slugintern %>
    </div>
    <div class="field">
      <%= f.label "FlattrHandle" %><br />
      <%= f.text_field :flattrhandle %>
    </div>
    <div class="field">
      <%= f.label "ADNHandle" %><br />
      <%= f.text_field :adnhandle %>
    </div>
    <div class="field">
      <%= f.label "Twitter" %><br />
      <%= f.text_field :twitterhandle %>
    </div>
    <div class="field">
      <%= f.label "HörsuppeSlug" %><br />
      <%= f.text_field :hoersuppeslug %>
    </div>
    <div class="field">
      <%= f.label "FeedURL" %><br />
      <%= f.text_field :feedurl %>
    </div>
    <div class="field">
      <%= f.label "Beschreibung" %><br />
      <% if !@podcast.description.blank? %>
        <%= f.text_area :description %>
      <% else %>
        <%= f.text_area :description, :value => "Keine Beschreibung vorhanden."  %>
      <% end %>
      <%= f.submit "Beschreibung aus dem Feed importieren", :name => "import_from_feed", :class => "small secondary button" %>
    </div>
    <div class="actions">
      <%= f.submit "Speichern", :class => "small button" %>
      <%= link_to 'Abbrechen', podcasts_path, :class => "small button alert", :confirm => "Vorsicht, alle Änderungen gehen verloren!" %>
    </div>
  </div>
</div>


<% end %>

