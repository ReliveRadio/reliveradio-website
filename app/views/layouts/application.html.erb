<!DOCTYPE html>
<!-- paulirish.com/2008/conditional-stylesheets-vs-css-hacks-answer-neither/ -->
<!--[if lt IE 7 ]> <html class="ie6" lang="en"> <![endif]-->
<!--[if IE 7 ]>    <html class="ie7" lang="en"> <![endif]-->
<!--[if IE 8 ]>    <html class="ie8" lang="en"> <![endif]-->
<!--[if (gte IE 9)|!(IE)]><!--> <html lang="en"> <!--<![endif]-->
<head>
	<meta charset="utf-8" />
	
	<!-- Uncomment to make IE8 render like IE7 -->
	<!-- <meta http-equiv="X-UA-Compatible" content="IE=7" /> -->
	
	<!-- Set the viewport width to device width for mobile -->
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	
	<title>ReliveRadio - <%= yield (:title) || "Untitled" %></title>

	<%= stylesheet_link_tag    "application" %>
	<%= javascript_include_tag "vendor/custom.modernizr" %>
  <%= csrf_meta_tags %>
</head>
<body>

	<!-- NAVIGATION BAR -->
	<nav class="top-bar">
	  <ul class="title-area">
	    <!-- Title Area -->
	    <li class="name">
	      <h1><%= link_to 'ReliveRadio', root_path %></h1>
	    </li>
	    <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
	    <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
	  </ul>

	  <section class="top-bar-section">
	    <!-- Left Nav Section -->
	    <ul class="left">
			<li class="divider"></li>
			<li ><%= link_to 'Sendeplan', root_path %></li>
			<li class="divider"></li>
			<li><%= link_to 'Alle Podcasts', overview_url %></li>
			<li class="divider"></li>
			<li><%= link_to 'Blog', "http://reliveradio.de/blog/news" %></li>
			<li class="divider"></li>
			<li><%= link_to 'Über', "http://reliveradio.de/blog/uber/" %></li>
			<li class="divider"></li>
			<li><%= link_to 'Chat', "http://reliveradio.de/blog/chat"%></li>
			<li class="divider"></li>
			<li><%= link_to 'Unterstützen', "http://reliveradio.de/blog/mitmachen/" %></li>
			<li class="divider"></li>
	    </ul>

	    <!-- Right Nav Section -->
	    <ul class="right">
	      <li class="divider hide-for-small"></li>
	      	<li><%= link_to 'Intern', podcasts_path %></li>
	      <li class="divider"></li>
	    </ul>
	  </section>
	</nav>

  <!-- SCRIPTS -->
  <%= javascript_include_tag "application" %>

  <!-- CONTENT -->
  <%= yield %>
  


    <!-- Footer -->
 
  <footer class="row">
    <div class="large-12 columns">
      <hr>
      <div class="row">
        <div class="large-6 columns">
          
        </div>
        <div class="large-6 columns">
          <ul class="inline-list right">
            <li><a href="http://reliveradio.de/blog/impressum/">Impressum</a></li>
          </ul>
        </div>
      </div>
    </div>
  </footer>

</body>
</html>